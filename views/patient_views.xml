<odoo>
  <data>
    <record id="view_form_patient" model="ir.ui.view">
      <field name="name">hms.patient.form</field>
      <field name="model">hms.patient</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="first_name"/>
              <field name="last_name"/>
              <field name="birth_date"/>
              <field name="age" readonly="1"/>
              <field name="address"/>
              <field name="history">
                <attributes>
                  <attribute name="invisible">age &lt; 50</attribute>
                </attributes>
              </field>
              <field name="blood_type"/>
              <field name="pcr"/>
              <field name="cr_ratio">
                <attributes>
                  <attribute name="required">pcr == True</attribute>
                </attributes>
              </field>
              <field name="state"/>
              <field name="image"/>
              <field name="department_id"/>
              <field name="doctor_ids" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_tree_patient" model="ir.ui.view">
      <field name="name">hms.patient.tree</field>
      <field name="model">hms.patient</field>
      <field name="arch" type="xml">
        <tree>
          <field name="first_name"/>
          <field name="last_name"/>
          <field name="age"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="action_hms_patients" model="ir.actions.act_window">
      <field name="name">Patients</field>
      <field name="res_model">hms.patient</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>